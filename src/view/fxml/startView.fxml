<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="8000.0" prefWidth="8000.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="controller.StartController">
  <center>
    <HBox alignment="CENTER" spacing="10.0">
      <Button fx:id="performanceButton" onAction="#handlePerformance" text="Performance Analysis" />
      <Button fx:id="classDiagramButton" onAction="#handleActionNewClassDiagram" text="New Class Diagram" />
      <Button fx:id="sequenceDiagramButton" onAction="#handleActionNewSequenceDiagram" text="New Sequence Diagram" />
      <Button fx:id="deploymentDiagramButton" onAction="#handleActionNewDeploymentDiagram" text="New Deployment Diagram" />
    </HBox>
  </center>
  <top>
    <BorderPane>
      <center>
        <VBox alignment="CENTER">
          <Label fx:id="titleLabel" text="OctoUML" />
          <Label fx:id="subTitleLabel" text="Choose diagram type" />
        </VBox>
      </center>
      <top>
        <Pane prefHeight="100.0" />
      </top>
    </BorderPane>
  </top>
</BorderPane>
